{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "noEmitOnError": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist",
        "strict": true,
        "lib": ["ES2015"],
        "sourceMap": true,
        "experimentalDecorators": true,
        "allowJs": false,
        "rootDirs": ["packages/**"],
        "declaration": true
    },
    "exclude": ["node_modules"],
    "compileOnSave": false
}
